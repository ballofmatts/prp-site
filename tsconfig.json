{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@env/*": ["environments/*"],
      "@services/*": ["app/services/*"],
      "@services": ["app/services"],
      "@models/*": ["app/models/*"],
      "@models": ["app/models"]
    }
  }
}
